<%- model_class = MemeCaption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:upper_caption) %></th>
      <th><%= model_class.human_attribute_name(:lower_caption) %></th>
      <th><%= model_class.human_attribute_name(:font) %></th>
      <th><%= model_class.human_attribute_name(:meme_image_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meme_captions.each do |meme_caption| %>
      <tr>
        <td><%= link_to meme_caption.id, meme_image_meme_caption_path(@meme_image, meme_caption) %></td>
        <td><%= meme_caption.upper_caption %></td>
        <td><%= meme_caption.lower_caption %></td>
        <td><%= meme_caption.font %></td>
        <td><%= meme_caption.meme_image_id %></td>
        <td><%=l meme_caption.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_meme_image_meme_caption_path(@meme_image, meme_caption), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      edit_meme_image_meme_caption_path(@meme_image, meme_caption),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meme_image_meme_caption_path(@meme_image),
            :class => 'btn btn-primary' %>
