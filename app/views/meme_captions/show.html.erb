<%- model_class = MemeCaption -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:upper_caption) %>:</strong></dt>
  <dd><%= @meme_caption.upper_caption %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lower_caption) %>:</strong></dt>
  <dd><%= @meme_caption.lower_caption %></dd>
  <dt><strong><%= model_class.human_attribute_name(:font) %>:</strong></dt>
  <dd><%= @meme_caption.font %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meme_image_id) %>:</strong></dt>
  <dd><%= @meme_caption.meme_image_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              meme_image_meme_captions_path(@meme_image), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_meme_image_meme_caption_path(@meme_image, @meme_caption), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              meme_image_meme_caption_path(@meme_image, @meme_caption),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
